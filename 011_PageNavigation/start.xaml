<Page x:Class="_011_PageNavigation.start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_011_PageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="start">

  <Grid>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button x:Name="btnInfo" Content="Information" 
              Height="50" Width="80" Margin="0 0 20 0" Click="btnInfo_Click"/>
      <Button x:Name="btnLogin" Content="Login" 
              Height="50" Width="80" Margin="0 0 20 0" Click="btnLogin_Click"/>
      <Button x:Name="btnSignUp" Content="Sign Up" 
              Height="50" Width="80" Click="btnSignUp_Click"/>
    </StackPanel>
  </Grid>
</Page>
